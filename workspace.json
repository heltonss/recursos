{
  "version": 2,
  "cli": {
    "defaultCollection": "@nrwl/web"
  },
  "defaultProject": "website",
  "generators": {
    "@nrwl/web:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/web:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    }
  },
  "projects": {
    "website": {
      "projectType": "application",
      "root": "packages/website",
      "sourceRoot": "packages/website/src",
      "targets": {
        "build": {
          "executor": "@nrwl/web:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/packages/website",
            "index": "packages/website/src/index.html",
            "main": "packages/website/src/main.ts",
            "polyfills": "packages/website/src/polyfills.ts",
            "tsConfig": "packages/website/tsconfig.app.json",
            "stylePreprocessorOptions": {
              "includePaths": ["design/styles"]
            },
            "assets": [
              "packages/website/src/favicon.png",
              "packages/website/src/assets",
              {
                "input": "design/assets",
                "glob": "**/*",
                "output": "assets"
              }
            ],
            "styles": ["packages/website/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "packages/website/src/envs/env.ts",
                  "with": "packages/website/src/envs/env.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/web:dev-server",
          "options": {
            "buildTarget": "website:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "website:build:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/website/**/*.ts"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/packages/website"],
          "options": {
            "jestConfig": "packages/website/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "website-e2e": {
      "root": "packages/website-e2e",
      "sourceRoot": "packages/website-e2e/src",
      "projectType": "application",
      "targets": {
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "packages/website-e2e/cypress.json",
            "tsConfig": "packages/website-e2e/tsconfig.e2e.json",
            "devServerTarget": "website:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "website:serve:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/website-e2e/**/*.{js,ts}"]
          }
        }
      }
    }
  }
}
